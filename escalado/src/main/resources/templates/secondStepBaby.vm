<html>    
    <head>                
        <meta name="decorator" content="blank">        
        $webResourceManager.requireResourcesForContext("atl.general")        
    </head>
    <body>        
        <h2>Seleccione el proyecto al cuál desea escalar</h2>
        <form action="/plugins/servlet/pluginUI/thirdStep" method="POST" class="aui">
        <div class="field-group">
            <label>
                Issue a escalar
            </label>
            <input type="text" name="issueKey" value="$issueKey" readonlyfield-group/>
        </div>
            <label>Seleccione el proyecto</label>
            <select name="proyecto" class="select" class="select">
                #foreach ($project in $projects)
                    #if(!($project.getName().toLowerCase().contains("estabilización") || $project.getName().toLowerCase().contains("estabilizacion")))
                        <option value="$project.getKey()">$project.getName()</option>
                    #end
                #end
            </select>
            <!-- Dialog footer -->
            <footer class="aui-dialog2-footer">
                <!-- Actions to render on the right of the footer -->
                <div class="aui-dialog2-footer-actions">
                    <input type="submit" id="submitBtn" class="aui-button aui-button-primary" value="Siguiente"/>
                    <button type ="button" class="aui-button aui-button-link" id="closeBtn">Close</button>
                </div>
                <!-- Hint text is rendered on the left of the footer -->
                <div class="aui-dialog2-footer-hint">Seleccione el proyecto al cual va a escalar.</div>
            </footer>    
            <!--<div class="aui-dialog2-footer-actions">
                <input type="submit" class="aui-button aui-button-primary" style="left:50%;" value="Siguiente"/>                
            </div>-->
        <form>
    </body>
</html>