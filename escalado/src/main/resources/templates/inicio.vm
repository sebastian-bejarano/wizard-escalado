    <body>        
        <h2>Seleccione el origen del defecto a escalar</h2>
        <form action="/secondStep" action="POST">
            <div class="groupInput">
                <input type="radio" name="origen" value="babysitting"/>
                <label>Babysitting</label>
            </div>
            <div class="groupInput">
                <input type="radio" name="origen" value="Preexistente"/>
                <label>Preexistente</label>
            </div>    
            <!-- Dialog footer -->
            <footer class="aui-dialog2-footer">
                <!-- Actions to render on the right of the footer -->
                <div class="aui-dialog2-footer-actions">
                    <input type="submit" class="aui-button aui-button-primary" value="Siguiente"/>
                    <button class="aui-button aui-button-link" id="closeBtn">Close</button>
                </div>
                <!-- Hint text is rendered on the left of the footer -->
                <div class="aui-dialog2-footer-hint">Origen del defecto.</div>
            </footer>    
